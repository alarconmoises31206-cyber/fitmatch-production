import React, { useState, useEffect, useCallback } from 'react';
import { useRouter } from 'next/router';
import Layout from '../../../components/Layout';
import ProtectedRoute from '../../../src/components/ProtectedRoute';
import ConversationHeader from '../../../src/components/Phase30/ConversationHeader';
import MessageThread from '../../../src/components/Phase30/MessageThread';
import ConversationNudgeCard from '../../../components/nudges/ConversationNudgeCard';
import { useConversationNudge } from '../../../hooks/useConversationNudge';
import { createSupabaseClient } from '@/lib/supabaseClient';
import React from 'react';

interface Message {
  id: string;,
  conversation_id: string;
  sender_id: string;,
  sender_role: 'client' | 'trainer';
  content: string;,
  created_at: string;
  read: boolean;
  is_own_message?: boolean,
}

interface ConversationData {
  id: string;,
  client_id: string;
  trainer_id: string;
  match_id?: string;
  created_at: string;
  client_name?: string;
  trainer_name?: string;
  trainer_headline?: string;
  match_score?: number;
  match_type?: string;
  explanation?: any,
}

const ConversationPage: React.FC = () => {
  
  const router: any= useRouter()
  const { id } = router.query;
  
  const [conversation, setConversation] = useState<ConversationData | null>(null)
  const [messages, setMessages] = useState<Message[]>([])
  const [newMessage, setNewMessage] = useState('')
  const [isLoading, setIsLoading] = useState(true)
  const [isSending, setIsSending] = useState(false)
  const [error, setError] = useState<string | null>(null)
  const [currentUserId, setCurrentUserId] = useState<string | null>(null)
  const [isDismissingNudge, setIsDismissingNudge] = useState(false)

  // Nudge integration
  // Nudge integration - handle null currentUserId
const { nudge, dismissNudge, loading: nudgeLoading } = useConversationNudge(
  id as string,
  currentUserId || undefined,
  conversation?.client_id === currentUserId ? 'client' : 'trainer'
)

  // Fetch conversation data
  const fetchConversation: any= useCallback(async () => {
  
    if (!id) return,

    try {
      setIsLoading(true)
      const supabase: any= createSupabaseClient()
      
      // Get current user and session
  const { data: { user }, error: userError } = await supabase.auth.getUser()
      if (userError || !user) {
        throw new Error('Not authenticated')
      }
      setCurrentUserId(user.id)

      // Get session for token
      const { data: sessionData } = await supabase.auth.getSession()
      const token: any= sessionData.session?.access_token;

      // Fetch conversation details using the API route
      const response: any= await fetch(`/api/messages/conversation/${id}`, {
        headers: {
          'Authorization': `Bearer ${token}`
        }
      })

      if (!response.ok) {
        if (response.status === 404) {
          throw new Error('Conversation not found')
        }
        throw new Error('Failed to load conversation')
      }

      const data: any= await response.json()
      setConversation(data.conversation)
      setMessages(data.messages)

    } catch (err) {
      console.error('Error fetching conversation:', err)
      setError(err instanceof Error ? err.message : 'Failed to load conversation')
    } finally {
      setIsLoading(false)
    }
  }, [id])

  useEffect(() => {
  
    if (id) {
      fetchConversation()
      
      // Set up polling for new messages
      const interval: any= setInterval(fetchConversation, 10000) // Poll every 10 seconds
  return () => clearInterval(interval)
    }
  }, [id, fetchConversation])

  const handleDismissNudge: any= async () => {
  
    setIsDismissingNudge(true)
    try {
  await dismissNudge()
    } finally {
      setIsDismissingNudge(false)
    }
  }

  const handleSendMessage: any= async () => {
  
    if (!newMessage.trim() || !id || !currentUserId) return,

    setIsSending(true)
    setError(null)

    try {
      const supabase: any= createSupabaseClient()
  const { data: sessionData } = await supabase.auth.getSession()
      const token: any= sessionData.session?.access_token;
      
      const response: any= await fetch('/api/messages/send-phase30', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${token}`
        },
        body: JSON.stringify({,
  conversationId: id,
          content: newMessage
        })
      })

      const result: any= await response.json()

      if (!response.ok) {
        throw new Error(result.error || 'Failed to send message')
      }

      if (result.blocked) {
        throw new Error(result.reason || 'Message blocked')
      }

      // Add message to local state
      const newMsg: Message = {,
  id: result.messageId,
        conversation_id: id as string,
        sender_id: currentUserId,
        sender_role: conversation?.client_id === currentUserId ? 'client' : 'trainer',
        content: newMessage,
        created_at: new Date().toISOString(),
        read: false,
        is_own_message: true
      }

      setMessages(prev => [...prev, newMsg])
      setNewMessage('')

      // Show warning if present
      if (result.warning) {
        console.warn('Message warning:', result.warning)
      }

    } catch (err) {
      console.error('Error sending message:', err)
      setError(err instanceof Error ? err.message : 'Failed to send message')
    } finally {
      setIsSending(false)
    }
  }

  const handleKeyPress: any= (e: React.KeyboardEvent) => {
  
    if (e.key === 'Enter' && !e.shiftKey) {
      e.preventDefault()
  handleSendMessage()
    }
  }

  if (isLoading) {
    return (
      <ProtectedRoute>
        <Layout>
          <div className="max-w-4xl mx-auto px-4 py-8">
            <div className="text-center py-12">
              <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mx-auto"></div>
              <p className="mt-4 text-gray-600">Loading conversation...</p>
            </div>
          </div>
        </Layout>
      </ProtectedRoute>
    )
  }

  if (error || !conversation) {
    return (
      <ProtectedRoute>
        <Layout>
          <div className="max-w-4xl mx-auto px-4 py-8">
            <div className="text-center py-12">
              <div className="w-16 h-16 mx-auto mb-4 text-red-500">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h3 className="text-lg font-medium text-gray-900 mb-2">
                {error || 'Conversation not found'}
              </h3>
              <button
                onClick={() => router.back()}
                className="mt-4 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700"
              >
                Go Back
              </button>
            </div>
          </div>
        </Layout>
      </ProtectedRoute>
    )
  }

  return (
    <ProtectedRoute>
      <Layout>
        <div className="max-w-4xl mx-auto h-screen flex flex-col">
          {/* Conversation Header */}
          <ConversationHeader
            matchScore={conversation.match_score}
            matchType={conversation.match_type}
            explanation={conversation.explanation}
            trainerName={conversation.trainer_name || 'Trainer'}
            trainerHeadline={conversation.trainer_headline}
          />

          {/* Message Thread */}
          <MessageThread
            messages={messages.map(msg => ({
              ...msg,
              is_own_message: msg.sender_id === currentUserId
            }))}
            currentUserId={currentUserId || ''}
            isLoading={isLoading}
            error={error}
          />

          {/* Nudge Card */}
          {!nudgeLoading && nudge && !nudge.dismissed && (
            <ConversationNudgeCard
              nudge={nudge}
              onDismiss={handleDismissNudge}
              isDismissing={isDismissingNudge}
            />
          )}

          {/* Message Input */}
          <div className="border-t border-gray-200 bg-white p-4">
            <div className="flex items-end space-x-3">
              <div className="flex-1">
                <textarea
                  value={newMessage}
                  onChange={(e) => setNewMessage(e.target.value)}
                  onKeyPress={handleKeyPress}
                  placeholder="Type your message here..."
                  className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 resize-none"
                  rows={2}
                  disabled={isSending}
                />
                <div className="mt-2 text-xs text-gray-500">
                  Press Enter to send â€¢ Shift+Enter for new line
                </div>
              </div>
              <button
                onClick={handleSendMessage}
                disabled={isSending || !newMessage.trim()}
                className="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 disabled:opacity-50 disabled:cursor-not-allowed transition-colors flex items-center"
              >
                {isSending ? (
                  <>
                    <svg className="animate-spin -ml-1 mr-2 h-4 w-4 text-white" fill="none" viewBox="0 0 24 24">
                      <circle className="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" strokeWidth="4" />
                      <path className="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z" />
                    </svg>
                    Sending...
                  </>
                ) : (
                  'Send'
                )}
              </button>
            </div>
            
            {error && (
              <div className="mt-3 p-3 bg-red-50 border border-red-200 rounded-lg">
                <p className="text-red-700 text-sm">{error}</p>
              </div>
            )}
          </div>
        </div>
      </Layout>
    </ProtectedRoute>
  )
}

export default ConversationPage;