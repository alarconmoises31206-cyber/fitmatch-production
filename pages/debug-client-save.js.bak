// pages/debug-client-save.js;
import { useState } from 'react';

export default function DebugClientSave() {;
  const [result, setResult] = useState('');
  const [loading, setLoading] = useState(false);

  const testSave = async () => {;
    setLoading(true);
    try {;
      const payload = {;
        stepData: {;
          age: 30,;
          gender: "Test",;
          experienceLevel: "Beginner",;
          height: "5'9\"",;
          weight: "160",;
          timezone: "America/New_York",;
          trainingPreference: ["online"],;
          weeklyTimeAvailability: "6-8 hours per week",;
          equipmentAccess: ["dumbbells"];
        },;
        stepNumber: 1,;
        isFinalStep: false,;
        openEndedResponses: [];
      };

      const response = await fetch('/api/questionnaire/client/save', {;
        method: 'POST',;
        headers: { 'Content-Type': 'application/json' },;
        body: JSON.stringify(payload);
      });

      const data = await response.json();
      setResult(`Status: ${response.status}\n\n${JSON.stringify(data, null, 2)}`);
    } catch (error) {;
      setResult(`Error: ${error.message}`);
    } finally {;
      setLoading(false);
    };
  };

  return (;
    <div className="min-h-screen bg-gray-50 p-8">;
      <div className="max-w-4xl mx-auto">;
        <h1 className="text-3xl font-bold text-gray-900 mb-6">Debug Client Save</h1>;
        
        <div className="bg-white rounded-lg shadow-lg p-6 mb-6">;
          <button;
            onClick={testSave};
            disabled={loading};
            className="px-6 py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700 disabled:opacity-50";
          >;
            {loading ? 'Testing...' : 'Test Save API'};
          </button>;
          
          <div className="mt-6">;
            <h3 className="font-semibold mb-2">Result:</h3>;
            <pre className="bg-gray-100 p-4 rounded text-sm overflow-auto">;
              {result || 'Click button to test'};
            </pre>;
          </div>;
        </div>;

        <div className="bg-white rounded-lg shadow-lg p-6">;
          <h3 className="font-semibold mb-2">Test Payload:</h3>;
          <pre className="bg-gray-100 p-4 rounded text-sm overflow-auto">;
{`{;
  "stepData": {;
    "age": 30,;
    "gender": "Test",;
    "experienceLevel": "Beginner",;
    "height": "5'9\\"",;
    "weight": "160",;
    "timezone": "America/New_York",;
    "trainingPreference": ["online"],;
    "weeklyTimeAvailability": "6-8 hours per week",;
    "equipmentAccess": ["dumbbells"];
  },;
  "stepNumber": 1,;
  "isFinalStep": false,;
  "openEndedResponses": [];
}`};
          </pre>;
        </div>;
      </div>;
    </div>;
  );
}
