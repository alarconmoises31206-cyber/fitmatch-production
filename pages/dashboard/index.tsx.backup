import React, { useEffect, useState } from 'react';
import { useRouter } from 'next/router';
import Layout from '../../components/Layout';
import ProtectedRoute from '../../components/ProtectedRoute';
import { supabase } from '../../lib/supabase/client.js';
import Link from 'next/link';
const DashboardPage: React.FC = () => {
  
  const router: any= useRouter()
  const [user, setUser] = useState<any>(null)
  const [userType, setUserType] = useState<'client' | 'trainer' | null>(null)
  const [loading, setLoading] = useState(true)
  
  const [aiMatchLoading, setAiMatchLoading] = useState(false)
  const [aiMatchError, setAiMatchError] = useState<string | null>(null)
  const [aiMatchResult, setAiMatchResult] = useState<any>(null)
  
  const [tokenBalance, setTokenBalance] = useState<number>(0)
  const [loadingTokens, setLoadingTokens] = useState(true)

  useEffect(() => {
    const fetchUserData: any= async () => {
      console.log('=== DASHBOARD START ===')
      
      try {
  const { data: { user }, error } = await supabase.auth.getUser()
        console.log('Auth user:', { email: user?.email, id: user?.id, error })

        if (error || !user) {
          console.log('No user, redirecting to login')
          router.push('/auth/login');
          return;}

        setUser(user)

        const { data: trainerProfile, error: trainerError } = await supabase
          .from('trainer_profiles')
          .select('id')
          .eq('user_id', user.id)
          .maybeSingle()
          
        console.log('Trainer profile check:', { 
          trainerProfile, 
          trainerError,
          isTrainer: !!trainerProfile 
        })

        const isTrainer: any= !!trainerProfile && !trainerError;
        setUserType(isTrainer ? 'trainer' : 'client')
        console.log('Setting userType to:', isTrainer ? 'trainer' : 'client')

        if (!isTrainer) {
          console.log('Fetching token balance for client...')
          const { data: tokenData, error: tokenError } = await supabase
            .from('user_token_balances')
            .select('balance')
            .eq('user_id', user.id)
            .maybeSingle()
            
          console.log('Token balance result:', { 
            tokenData, 
            tokenError,
            balance: tokenData?.balance 
          })
          
          if (!tokenError && tokenData) {
            setTokenBalance(tokenData.balance || 0)
          } else {
            setTokenBalance(0)
          }
        } else {
          console.log('User is trainer, skipping token balance')
        }

      } catch (error) {
        console.error('Error in fetchUserData:', error)
      } finally {
        setLoading(false)
        setLoadingTokens(false)
        console.log('=== DASHBOARD END ===')
      }
    }

    fetchUserData()
  }, [router]);
  const handleAiMatchSpin: any= async () => {
  
    if (!user) {
      setAiMatchError('Please sign in to use AI Match.')
  return;}

    console.log('Starting AI Match Spin for user:', user.email)
    
    setAiMatchLoading(true)
    setAiMatchError(null)
    setAiMatchResult(null)

    try {
      const { data: { session }, error: sessionError } = await supabase.auth.getSession()
      
      if (sessionError || !session) {
        setAiMatchError('Please sign in again.')
        setAiMatchLoading(false)
        return;}

      const token: any= session.access_token;
      console.log('Got auth token, calling spin-initiate...')
      
      const supabaseUrl: any= process.env.NEXT_PUBLIC_SUPABASE_URL || 'https://jllzubbtdbwlnnbqrkdw.supabase.co';
      console.log('Using Supabase URL:', supabaseUrl)
      
      if (!supabaseUrl) {
        throw new Error('Supabase URL not configured')
      }

      const response: any= await fetch(`${supabaseUrl}/functions/v1/spin-initiate`, {
        method: 'POST',
        headers: {
          'Authorization': `Bearer ${token}`,
          'Content-Type': 'application/json'},
        body: JSON.stringify({})})

            console.log('Spin-initiate response:', response.status)

      // Handle 402 FIRST (payment required)
      if (response.status === 402) {
        const result: any= await response.json()
        console.log('Redirecting to Stripe checkout:', result.checkoutUrl)
        // Store current URL to return to after payment;
        sessionStorage.setItem('prePaymentUrl', window.location.href)
        // Redirect to Stripe
        window.location.href = result.checkoutUrl;
        return;}

      // Handle successful response (200)
      if (response.ok) {
        const result: any= await response.json()
        console.log('Spin result:', result)
        
        setAiMatchResult(result)
        setTokenBalance(prev => prev - 5)
        
      } else if (response.status === 401) {
        setAiMatchError('Session expired. Please sign in again.')
      } else {
        const errorText: any= await response.text()
        setAiMatchError(`Error: ${response.status}. ${errorText}`)
      }
    } catch (err: any) {
      console.error('AI Match Spin failed:', err)
      setAiMatchError(err.message || 'Network error. Please check your connection.')
    } finally {
      setAiMatchLoading(false)
    }
  }

  const refreshTokenBalance: any= async () => {
  
    if (!user) return;setLoadingTokens(true)
    try {
  const { data: tokenData, error: tokenError } = await supabase
        .from('user_token_balances')
        .select('balance')
        .eq('user_id', user.id)
        .maybeSingle()
        
      if (!tokenError && tokenData) {
        setTokenBalance(tokenData.balance || 0)
      } else {
        setTokenBalance(0)
      }
    } catch (error) {
      console.error('Error refreshing token balance:', error)
    } finally {
      setLoadingTokens(false)
    }
  }

  if (loading) {
    return (
      <ProtectedRoute>
        <Layout>
          <div className="min-h-screen flex items-center justify-center">
            <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
          </div>
        </Layout>
      </ProtectedRoute>
    )
  }

  console.log('Rendering dashboard with:', { userType, tokenBalance })

  const spinsAvailable: any= Math.floor(tokenBalance / 5)

  return (
    <ProtectedRoute>
      <Layout>
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
          {/* Header */}
          <div className="mb-8">
            <div className="flex justify-between items-start">
              <div>
                <h1 className="text-3xl font-bold text-gray-900">Dashboard</h1>
                <p className="text-gray-600 mt-2">
                  Welcome back{user?.email ? `, ${user.email}` : ''}!
                </p>
              </div>
              
              {userType === 'client' && (
                <div className="bg-gradient-to-r from-blue-50 to-purple-50 border border-blue-200 rounded-xl px-4 py-3">
                  <div className="flex items-center">
                    <div className="mr-3">
                      <div className="w-10 h-10 rounded-full bg-gradient-to-r from-blue-500 to-purple-500 flex items-center justify-center">
                        <span className="text-white font-bold">?</span>
                      </div>
                    </div>
                    <div>
                      <div className="text-sm text-gray-600">AI Match Tokens</div>
                      <div className="flex items-center">
                        {loadingTokens ? (
                          <div className="h-6 w-16 bg-gray-200 rounded animate-pulse"></div>
                        ) : (
                          <>
                            <span className="text-2xl font-bold text-gray-900">
                              {tokenBalance}
                            </span>
                            <span className="ml-1 text-gray-600">tokens</span>
                            <button
                              onClick={refreshTokenBalance}
                              className="ml-3 text-blue-600 hover:text-blue-800 text-sm flex items-center"
                            >
                              <svg className="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                              </svg>
                              <span className="ml-1">Refresh</span>
                            </button>
                          </>
                        )}
                      </div>
                      <div className="text-xs text-gray-500 mt-1">
                        {spinsAvailable} spin{spinsAvailable !== 1 ? 's' : ''} available (5 tokens per spin)
                      </div>
                    </div>
                  </div>
                </div>
              )}
            </div>
          </div>

          {/* AI Match Spin Section */}
          <div className="mb-8 p-6 bg-gradient-to-r from-purple-50 to-blue-50 rounded-2xl shadow-lg border border-purple-200">
            <div className="flex justify-between items-start mb-4">
              <div>
                <h2 className="text-2xl font-bold text-gray-900">?? AI Match Spin</h2>
                <p className="text-gray-700">
                  Get instant, AI-powered trainer recommendations
                </p>
                <div className="mt-2 text-sm text-gray-600">
                  <span className="font-bold">{userType === 'client' ? 'Client' : 'Trainer'}</span> ?{' '}
                  <span className="font-bold">{tokenBalance} tokens</span> ?{' '}
                  <span className="font-bold">{spinsAvailable} spins available</span>
                </div>
              </div>
              
              {userType === 'client' && (
                <div className="bg-white border border-gray-300 rounded-lg px-4 py-2">
                  <div className="text-center">
                    <div className="text-sm text-gray-600">Ready to spin</div>
                    <div className="flex items-center justify-center">
                      {loadingTokens ? (
                        <div className="h-6 w-8 bg-gray-200 rounded animate-pulse"></div>
                      ) : (
                        <>
                          <div className="text-2xl font-bold text-gray-900 mr-2">
                            {spinsAvailable}
                          </div>
                          <div className="text-left">
                            <div className="text-xs text-gray-600">spins</div>
                            <div className="text-xs text-gray-500">{tokenBalance} tokens</div>
                          </div>
                        </>
                      )}
                    </div>
                  </div>
                </div>
              )}
            </div>
            
            {userType === 'trainer' ? (
              <div className="p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
                <p className="text-yellow-800">
                  ?? AI Match Spin is only available for clients. You are logged in as a trainer.
                </p>
              </div>
            ) : (
              <>
                <div className="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                  <div className={`border-2 ${tokenBalance >= 5 ? 'border-green-500 bg-green-50' : 'border-gray-300 bg-gray-50'} rounded-lg p-4`}>
                    <div className="flex items-center mb-2">
                      <div className={`w-8 h-8 rounded-full ${tokenBalance >= 5 ? 'bg-green-100 text-green-600' : 'bg-gray-200 text-gray-500'} flex items-center justify-center mr-3`}>
                        <span className="font-bold">?</span>
                      </div>
                      <div>
                        <h3 className="font-bold text-gray-900">Use Tokens</h3>
                        <div className="text-sm text-gray-700">
                          {tokenBalance >= 5 
                            ? `You have enough tokens for ${spinsAvailable} spin${spinsAvailable !== 1 ? 's' : ''}`
                            : `Need ${5 - tokenBalance} more tokens`
                          }
                        </div>
                      </div>
                    </div>
                    <div className="mt-3 text-lg font-bold text-gray-900">
                      5 tokens per spin
                    </div>
                  </div>
                  
                  <div className="border-2 border-blue-500 bg-blue-50 rounded-lg p-4">
                    <div className="flex items-center mb-2">
                      <div className="w-8 h-8 rounded-full bg-blue-100 text-blue-600 flex items-center justify-center mr-3">
                        <span className="font-bold">$</span>
                      </div>
                      <div>
                        <h3 className="font-bold text-gray-900">Purchase Spin</h3>
                        <div className="text-sm text-gray-700">
                          No tokens? Buy a single spin instantly
                        </div>
                      </div>
                    </div>
                    <div className="mt-3 text-lg font-bold text-gray-900">
                      $4.99 per spin
                    </div>
                  </div>
                </div>
                
                <div className="text-center">
                  <button
                    onClick={handleAiMatchSpin}
                    disabled={aiMatchLoading}
                    className={`
                      px-8 py-4 rounded-xl font-bold text-lg
                      transition-all duration-300 transform hover:scale-[1.02]
                      ${aiMatchLoading 
                        ? 'bg-gradient-to-r from-purple-400 to-blue-400 cursor-not-allowed opacity-90' 
                        : 'bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 hover:shadow-xl'
                      }
                      text-white shadow-lg
                    `}
                  >
                    {aiMatchLoading ? (
                      <span className="flex items-center justify-center">
                        <svg className="animate-spin h-6 w-6 mr-3 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                          <circle className="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" strokeWidth="4"></circle>
                          <path className="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                        Finding Your Match...
                      </span>
                    ) : (
                      <span className="flex items-center justify-center">
                        <span className="mr-3 text-2xl">??</span>
                        Run AI Match Spin
                      </span>
                    )}
                  </button>
                  
                  <div className="mt-3 text-gray-600 text-sm">
                    {tokenBalance >= 5 
                      ? `Will use 5 tokens ? ${tokenBalance - 5} tokens remaining ? ${spinsAvailable - 1} spins left`
                      : `Will redirect to purchase page ? $4.99 per spin`
                    }
                  </div>
                </div>
                
                {aiMatchError && (
                  <div className="mt-6 p-4 bg-red-50 border border-red-300 rounded-lg">
                    <div className="flex">
                      <div className="flex-shrink-0">
                        <svg className="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                          <path fillRule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clipRule="evenodd" />
                        </svg>
                      </div>
                      <div className="ml-3">
                        <h3 className="text-sm font-medium text-red-800">Error</h3>
                        <div className="mt-2 text-sm text-red-700">
                          <p>{aiMatchError}</p>
                        </div>
                      </div>
                    </div>
                  </div>
                )}
                
                {aiMatchResult && (
                  <div className="mt-6 p-6 bg-green-50 border border-green-300 rounded-xl">
                    <div className="flex items-center mb-4">
                      <div className="flex-shrink-0">
                        <svg className="h-6 w-6 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M5 13l4 4L19 7" />
                        </svg>
                      </div>
                      <div className="ml-3">
                        <h3 className="text-lg font-semibold text-green-800">? AI Match Found!</h3>
                        <p className="text-green-700">Your personalized trainer recommendations are ready.</p>
                      </div>
                    </div>
                    
                    <div className="bg-white p-4 rounded-lg border">
                      <p className="text-gray-600 mb-2">Match result (check console for full details):</p>
                      <div className="text-xs text-gray-500">
                        Match created successfully. Check your matches page or refresh to see updated token balance.
                      </div>
                    </div>
                  </div>
                )}
              </>
            )}
          </div>

          {/* Dashboard Cards */}
          <div className="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div className="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
              <div className="flex items-center mb-4">
                <div className="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center mr-4">
                  <svg className="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 5l7 7-7 7" />
                  </svg>
                </div>
                <h3 className="font-medium text-gray-900">Your Matches</h3>
              </div>
              <p className="text-gray-600 text-sm mb-4">
                Discover trainers who match your goals and preferences
              </p>
              <Link
                href="/matches"
                className="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700"
              >
                View Matches
              </Link>
            </div>

            <div className="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
              <div className="flex items-center mb-4">
                <div className="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center mr-4">
                  <svg className="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                  </svg>
                </div>
                <h3 className="font-medium text-gray-900">Messages</h3>
              </div>
              <p className="text-gray-600 text-sm mb-4">
                {userType === 'trainer'
                  ? 'Conversations with your matched clients'
                  : 'Chat with your matched trainers'}
              </p>
              <Link
                href="/messages"
                className="inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700"
              >
                View Messages
              </Link>
            </div>

            <div className="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
              <div className="flex items-center mb-4">
                <div className="w-10 h-10 rounded-full bg-purple-100 flex items-center justify-center mr-4">
                  <svg className="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                </div>
                <h3 className="font-medium text-gray-900">Profile</h3>
              </div>
              <p className="text-gray-600 text-sm mb-4">
                {userType === 'trainer'
                  ? 'Update your trainer profile and availability'
                  : 'Complete your client profile for better matches'}
              </p>
              <Link
                href={userType === 'trainer' ? '/trainer/setup' : '/questionnaire'}
                className="inline-flex items-center px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700"
              >
                {userType === 'trainer' ? 'Trainer Profile' : 'Client Profile'}
              </Link>
            </div>
          </div>
        </div>
      </Layout>
    </ProtectedRoute>
  )
}

export default DashboardPage;


